.head
{ background-color:#111; }

.head
{ background-color:rgba(10,10,10,0.3); }

article, .devise
{ background-color:#D2C6BD }

html
{ background:url(<%= asset_path 'noisy.png' %>) }

nav
{ background-color:green; }
aside
{ background-color:yellow; }

#main
{
  -webkit-flex-flow:row;
  flex-flow:row;
}

#main > nav,
#main > aside
{
  -webkit-flex:1 6 20%;
  flex:1 6 20%;
}

#main > article
{
  -webkit-flex:3 1 60%;
  flex:3 1 60%;
}

#main > nav
{
  -webkit-order:1;
  order:1;
}

#main > article
{
  -webkit-order:2;
  order:2;
}

#main > aside
{
  -webkit-order:3;
  order:3;
}

#main > article,
#main > nav,
#main > aside,
header,
footer
{ border-radius:7pt }

header, #main
{ display: flex; }


#main
{ margin:0px }

#main > article,
#main > nav,
#main > aside,
header,
footer
{ margin:4px }

header,
footer
{ min-height:100px }

#main
{ min-height:800px }

#main > nav
{ order:1 }

#main > article
{ order:2 }

#main > aside
{ order:3 }

#main
{ padding:0px }

#main > article,
#main > nav,
#main > aside,
header,
footer
{ padding:5px }

header h1:after
{ content: "<%= I18n.t('svdp.full') %>"; }

/* Too narrow to support three columns */
@media all and (max-width: 640px) {

  header h1:after
  { content: "<%= I18n.t('svdp.short') %>"; }

   #main, #page {
    -webkit-flex-flow:  column;
    flex-direction:     column;
    flex-flow:          column;
   }

   #main > article, #main > nav, #main > aside {
    /* Return them to document order */
    -webkit-order:  0;
    order:          0;
   }

   #main > nav, #main > aside, header, footer
   { min-height: 120px; }

   #main > nav, #main > aside, header, footer
   { max-height: 50px; }
 }

