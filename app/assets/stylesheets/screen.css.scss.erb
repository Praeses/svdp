$white:   white;
$black:   black;
$first:   #0177BD;
$second:  #00273D;
$third:   #132E3D;
$fourth:  #0157BA;
$error:   #CB151A;

.devise
{ background-color:$fourth; }

nav, aside, article, footer
{ background-color:darken($white, 5%); }

html
{ background:url(<%= asset_path 'pattern-inao.png' %>) }


article, footer
{border-top: 10px solid $second }

nav
{border-top: 10px solid $fourth }

aside
{border-top: 10px solid $fourth }

nav h2
{border-bottom: 2px solid $third }

aside h2
{border-bottom: 2px solid $third }


header div
{ display: inline-block; }

header div
{ vertical-align: top; }

header
{ clear:both; }

.user
{ float:right; }


footer
{ min-height:110px }

#main, nav, article
{ min-height:800px }

header h1:after
{ content: attr(full); }

@media all and (max-width: 768px) {
  header h1:after
  { content: attr(medium); }
}

/* Too narrow to support three columns */
@media all and (max-width: 640px) {

  header .logo
  {
    -webkit-transform: scale(0.5, 0.5);
    transform: scale(0.5, 0.5);
  }

  header h1:after
  { text-transform: uppercase; }

  header h1:after
  { content: attr(short); }

 }

tr
{border-bottom:1px solid #aaa}

.edit_group
{border-bottom:1px solid #888}

.devise
{border:1px solid #888}

table
{border-collapse:collapse}

th
{text-align:left}

.devise, article, aside, nav,
{box-shadow:0px 10px 20px rgba(0,0,0, 0.5)}

.devise
{ color:$white; }

html
{ color: $black; }

a:hover
{color: $fourth; }

a:hover
{text-decoration: underline;}

a
{text-decoration: none;}

table
{border-collapse:collapse;}

th
{text-align:left}


html, h1
{ font-family:'Open Sans Condensed', sans-serif; }

body
{ font-size: 16px; }

body
{ line-height: 20px; }


article,
nav,
aside,
nav > a,
aside > a,
footer
{ padding:5px }

#main
{ padding:0px }

.devise
{padding: 2em }

.edit_group
{padding:3em 0 2em 0}

#main
{ margin:0px }

article, aside,
nav > a, aside > a,
footer
{ margin:4px }

.devise, header > div
{margin:auto;}

.devise, header > div.logo
{margin:inherit;}

aside, article
{ margin-left: 12em; }

.devise
{margin-top: 3em }

body
{ margin-bottom: 10px; }

.devise
{ width: 40em }

nav
{ width: 10em; }

nav
{ position: absolute; }


table
{width:100%}

