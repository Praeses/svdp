$white:   white;
$black:   black;
$first:   #0177BD;
$second:  #FFBB00;
$third:   #FF3D00;
$fourth:  #004D7B;
$error:   #500000;

article, .devise
{ background-color:$fourth; }

nav, aside
{ background-color:darken($white, 15%); }

nav > a
{ background-color:$second; }


aside > a,
nav > a:hover
{ background-color:$third; }

footer
{ background-color:$first; }

html
{ background:url(<%= asset_path 'noisy.png' %>) }


#main
{
  -webkit-flex-flow:row;
  flex-flow:row;
}

nav {
  -webkit-flex-flow:  column;
  flex-direction:     column;
  flex-flow:          column;
}

#main > nav,
#main > aside
{
  -webkit-flex:1 6 20%;
  flex:1 6 20%;
}

#main > article
{
  -webkit-flex:3 1 60%;
  flex:3 1 60%;
}

#main > nav
{
  -webkit-order:1;
  order:1;
}

#main > article
{
  -webkit-order:2;
  order:2;
}

#main > aside
{
  -webkit-order:3;
  order:3;
}

article, footer
{border-top: 3px solid $second }

nav
{border-top: 3px solid $third }

aside
{border-top: 3px solid $fourth }

header, #main, nav
{ display: flex; }

header,
footer
{ min-height:110px }

#main
{ min-height:800px }

#main > nav
{ order:1 }

#main > article
{ order:2 }

#main > aside
{ order:3 }

header h1:after
{ content: attr(full); }

@media all and (max-width: 768px) {
  header h1:after
  { content: attr(medium); }
}

/* Too narrow to support three columns */
@media all and (max-width: 640px) {

  header .logo
  {
    -webkit-transform: scale(0.5, 0.5);
    transform: scale(0.5, 0.5);
  }

  header h1:after
  { text-transform: uppercase; }

  header h1:after
  { content: attr(short); }

  nav {
    -webkit-flex-flow:  row;
    flex-direction:     row;
    flex-flow:          row;
  }
  nav > a
  { max-height: 20px; }

   #main, #page {
    -webkit-flex-flow:  column;
    flex-direction:     column;
    flex-flow:          column;
   }

   #main > article, #main > nav, #main > aside {
    /* Return them to document order */
    -webkit-order:  0;
    order:          0;
   }

   #main > nav, #main > aside, header, footer
   { min-height: 90px; }

   #main > nav, #main > aside, header, footer
   { max-height: 50px; }
 }

