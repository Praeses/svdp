= form_for @family do |f|
  - if @family.errors.any?
    #error_explanation
      %h2= "#{pluralize(@family.errors.count, "error")} prohibited this family from being saved:"
      %ul
        - @family.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  %br
  %br

  = link_to 'Add Address', new_address_path({:family_id => @family.id})
  %br
  %table
    %tr
      %th='Line 1'
      %th='Line 2'
      %th='Line 3'
      %th='City'
      %th='State'
      %th='Zip'
      %th=''
    - @family.addresses.each do |address|
      %tr
        %td=address.line_1
        %td=address.line_2
        %td=address.line_3
        %td=address.city
        %td=address.state
        %td=address.zip
        %td
          = link_to 'Edit Address', edit_address_path(address)

  %br
  %br

  = link_to 'Add Family Member', new_person_path({:family_id => @family.id})
  %br
  %table
    %tr
      %th='First Name'
      %th='Last Name'
      %th='Church'
      %th='SSN Last-4'
    - @family.people.each do |person|
      %tr
        %td=person.first_name
        %td=person.last_name
        %td=person.church
        %td=person.ssn
        %td
          = link_to 'Edit Person', edit_person_path(person)


  %br
  %br



  -#= link_to 'Add Case File', new_case_file_path({:family_id => @family.id})
  -#%br
  -#%table
  -#  %tr
  -#    %th='Number'
  -#  - @family.case_files.each do |file|
  -#    %tr
  -#      %td=file.number
  -#      %td
  -#        = link_to 'Edit Case File', edit_case_file_path(person)
  %br
  %br
  %br
  %br

  .actions
    = f.submit 'Save'
