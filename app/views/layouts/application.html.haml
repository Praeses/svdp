!!!
%html
  %head
    %title= t('svdp.short')
    %link{:href => "https://fonts.googleapis.com/css?family=Modern+Antiqua|Donegal+One&subset=latin", :rel => "stylesheet", :type => "text/css"}

    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body

    %header
      .logo
        %a{:href => "/" }
          = image_tag 'logo.png'

      .title
        %h1

      - if user_signed_in?
        .user{'data-no-turbolink' => true}
          %span.display= current_user.display_name
          = link_to t(:logout), destroy_user_session_path, :method => :delete, :class => 'logout'

    #main
      %article
        %p.notice= notice
        %p.alert= alert
        = yield
      %nav
        = yield :nav
      %aside
        = yield :aside

    %footer
      footer
