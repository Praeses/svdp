#search
  %em== Number of Families: #{Family.count}
  %em== Number of People: #{Person.count}
  %em== Number of Address: #{Address.count}
  = form_for Search.new do |f|
    = f.search_field :term, { placeholder: t('search.field'), results: 5, autosave: 'family_search' }
    = f.submit t('search.now')
